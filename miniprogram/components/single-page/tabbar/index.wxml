<view class="tab-bar-container">
  <view class="tab-bar">
    <view
      wx:for="{{pages}}"
      wx:key="index"
      class="tab-bar-item {{selected === index ? 'active' : ''}} {{item.color}}"
      style="{{selected === index ? 'color: ' + item.color + ';background-color: ' + item.bgColor:''}}"
      data-index="{{index}}"
      bindtap="switchTab"
    >
      <!-- 图标 -->
      <view class="iconfont {{item.icon}} icon" />
      <!-- 文字 -->
      <view class="tab-name">{{item.name}}</view>
    </view>
  </view>
</view>
