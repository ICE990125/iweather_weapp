/* 背景图 */
.weather-bg {
  background-color: rgb(84, 171, 253);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
}

/* 可滚动视图 */
.weather-container {
  position: relative;
  font-family: 'consolas';
  box-sizing: border-box;
  height: 100vh;
  width: 100vw;
  z-index: 2;
}

.padding-left-right-1 {
  padding-left: 1em;
  padding-right: 1em;
}

/* 天气简报 */
.weather-brief-info {
  color: #fff;
  padding: 0.5em 1em;
}

.temperature {
  font-size: 5em;
}

.weather-aqi {
  background-color: transparent;
  outline: none;
}

.margin {
  margin: 5px 0;
}

.title {
  margin-bottom: 0.8em;
  font-weight: bold;
}

/* 小时概述和逐日概述 */
.hours,
.days {
  display: flex;
}

.hours-item,
.days-item {
  display: flex;
  min-width: 60px;
  align-items: center;
  flex-direction: column;
  padding: 0.2em 0;
}

.hours-item-hover,
.days-item-hover {
  background-color: rgb(0, 0, 0, 0.1);
}

.days-time {
  margin: 0.5em 0;
  color: #909399;
}

.hours-icon {
  margin: 1em 0;
}

.hours-temp {
  margin-top: 0.5em;
}

/* 天气详情页 */
.weather-detail-content {
  background-color: #f4f8f9;
  padding: 0.5em 1em;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}

/* 日月生落 */
.title-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 加载动画 */
.loading {
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}
