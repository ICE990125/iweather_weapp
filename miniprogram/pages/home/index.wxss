.container {
  height: 100vh;
  width: 100vw;
}

.weather-bg {
  background-color: rgb(84, 171, 253);
  width: 100%;
  height: 650rpx;
  position: absolute;
  top: 0;
  z-index: 1;
}

.weather-info {
  position: relative;
  z-index: 2;
}

.weather-brief-info-container {
  position: inherit;
  height: 650rpx;
  padding: 0 2em;
}

.weather-brief-info {
  position: absolute;
  bottom: 2em;
  color: #fff;
}

.navigator-class {
  margin: 0 2em;
  transform: translateY(-50%);
}

.temperature {
  font-size: 5em;
}

.weather-aqi {
  background-color: transparent;
  outline: none;
}
